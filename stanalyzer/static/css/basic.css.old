body {
    background-color: #FFFFFF;
    color:            #000000;
    font-family:      arial, helvetica, sans-serif;
    font-size:        76%;
    font-style:       normal;
    font-weight:      normal;
    margin:           0;
}

#header .logo {
    font-weight:      bold;
    font-size:        1.4em;
    color:            #750000;
    letter-spacing:   -0.02em;
    float:            left;
}

#header a {
    text-decoration:  none;
}

#header .quote {
    font-size:        0.55em;
    color:            #000000;
    font-style:       italic;
    float:            right;
    text-align:       right;
    padding-right:    15px;
    padding-top:      10px;
}

#footer {
  border-top: solid 1px #505050;
  margin:     10px 0px 10px 0px;
  padding:    5px 10px 10px 15px;
  text-align: center;
  clear:      both;
}

#footer a {
    text-decoration: none;
}

#topnav {
    background-color: #999999;
    margin:           0 0 15px 0;
    padding:          10px 15px 10px 15px;
    border-bottom:    solid 1px #505050;
    font-weight:      bold;
    font-size:        1.1em;
    text-align:       right;
}

#topnav a {
    color:            #750000;
    font-weight:      bold;
    text-decoration:  none;
}

#main {
    padding:          10px 10px 20px 5px;
    font-size:        1.2em;
}

#content {
    margin-left:      20px;
    margin-right:     15px;
}

#title {
    border-bottom:  solid 1px #373737;
    color:          #373737;
    font-size:        1.7em;
    letter-spacing: -0.03em;
    margin-bottom:  15px;
    font-family:    arial, helvetica, sans-serif;
}

.box {
    font-size: 1.1em;
    margin: 0px 0px 20px 0;
    padding: 0.5em 1em;
    border: solid 1px #505050;
}

h3 {
    margin: 5px 0px;
    font-size: 1.1em;
}

h2 {
    margin-bottom: 0.25em;
}

